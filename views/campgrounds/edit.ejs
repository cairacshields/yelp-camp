<% include ../partials/header %>

<%/* Beginning of new campground form */%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center"> Create a new campground here! </h1>

			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">

				<div class="form-group">
					<input class="form-control" type="text" name="data[name]" value="<%=campground.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="data[image]" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="data[price]" value="<%=campground.price%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="data[description]" value="<%=campground.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit"> Update Campground </button>
				</div>
			</form>


		<a href="/campgrounds"> Go Back </a>
	</div>
</div>

<%/* End of new campground form */%>
<% include ../partials/footer %>
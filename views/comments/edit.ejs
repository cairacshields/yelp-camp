<% include ../partials/header %>

<%/* Beginning of edit campground form */%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center"> Edit comment here! </h1>

			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">

				<div class="form-group">
					<textarea class="form-control" type="text" name="comment[text]"><%=comment.text%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit"> Add Comment </button>
				</div>
			</form>


		<a href="/campgrounds"> Go Back </a>
	</div>
</div>

<%/* End of new campground form */%>
